@model ProjectsUpdateViewModel
<h1>Update Project</h1>

<form asp-action="Update" asp-controller="Projects" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <div class="form-group">

        <label asp-for=Name>Update Project Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=Description>Update Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for=StartDate>Update Start</label>
        <input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">

        <label asp-for=EndDate>Update End</label>
        <input asp-for="EndDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update Project</button>
</form>



