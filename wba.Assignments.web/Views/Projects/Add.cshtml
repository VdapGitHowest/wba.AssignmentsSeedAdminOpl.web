@model ProjectsAddViewModel
<h1>Add New Project</h1>

<form asp-action="Add" asp-controller="Projects" method="post">
    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
    <div class="form-group">

        <label asp-for=Name>Add Project Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for=Description>Add Description</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">

        <label asp-for=StartDate>Add Start</label>
        <input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">

        <label asp-for=EndDate>Add End</label>
        <input asp-for="EndDate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>



